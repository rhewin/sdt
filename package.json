{
  "name": "birthday-message-scheduler",
  "version": "1.0.0",
  "description": "Production-ready birthday message scheduling system",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev:server": "nodemon --exec ts-node src/server.ts",
    "dev:worker": "nodemon --exec ts-node src/worker.ts",
    "start:server": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "migrate:create": "ts-node ./node_modules/typeorm/cli.js migration:create",
    "migrate:run": "ts-node -r tsconfig-paths/register -r module-alias/register ./node_modules/typeorm/cli.js migration:run -d src/config/database.ts",
    "migrate:run:prod": "node dist/migrate.js",
    "migrate:revert": "ts-node -r tsconfig-paths/register -r module-alias/register ./node_modules/typeorm/cli.js migration:revert -d src/config/database.ts",
    "backfill:today": "ts-node src/scripts/backfill-today-birthdays.ts",
    "seed:users": "ts-node src/infra/migrations/seeders/users.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\" \"tests/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\" \"tests/**/*.{ts,js,json,md}\"",
    "prepare": "husky"
  },
  "keywords": [
    "birthday",
    "scheduler",
    "typescript",
    "bullmq",
    "postgres"
  ],
  "author": "",
  "license": "MIT",
  "_moduleAliases": {
    "@": "dist"
  },
  "dependencies": {
    "bullmq": "^5.1.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "luxon": "^3.4.4",
    "module-alias": "^2.2.3",
    "node-cron": "^3.0.3",
    "opossum": "^8.1.3",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.1",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.19",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/luxon": "^3.3.7",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/opossum": "^8.1.2",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.0.2",
    "prettier": "^3.8.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
