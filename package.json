{
  "name": "birthday-message-scheduler",
  "version": "1.0.0",
  "description": "Production-ready birthday message scheduling system",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev:server": "nodemon --exec ts-node src/server.ts",
    "dev:worker": "nodemon --exec ts-node src/worker.ts",
    "start:server": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "migrate:create": "ts-node ./node_modules/typeorm/cli.js migration:create",
    "migrate:run": "ts-node ./node_modules/typeorm/cli.js migration:run -d src/config/database.ts",
    "migrate:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert -d src/config/database.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "birthday",
    "scheduler",
    "typescript",
    "bullmq",
    "postgres"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "typescript": "^5.3.3",
    "pg": "^8.11.3",
    "typeorm": "^0.3.19",
    "bullmq": "^5.1.5",
    "ioredis": "^5.3.2",
    "luxon": "^3.4.4",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "node-cron": "^3.0.3",
    "opossum": "^8.1.3",
    "uuid": "^9.0.1",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/luxon": "^3.3.7",
    "@types/uuid": "^9.0.7",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0"
  }
}
